{
   "manifest_version": 2,
   "version": "1.2",
   "name": "HLSPlayer",
   "description": "Use hls.js to play HLS video(m3u8) directly.",
   "icons": {
      "128": "icon.png"
   },
   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon.png",      
      "default_title": "Enable"
   },
   "options_ui": {
      "chrome_style": true,
      "page": "options.html"
   },
   "permissions": [ "tabs", "*://*/*.m3u8*", "webRequest", "webRequestBlocking"],
   "content_security_policy": "script-src 'self' blob:; object-src 'self'"
}
