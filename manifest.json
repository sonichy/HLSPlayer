{
   "manifest_version": 2,
   "version": "1.5",
   "name": "HLSPlayer",
   "description": "Use hls.js to play HLS video(m3u8) directly.",
   "icons": {
      "128": "icon.png"
   },
   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon.png",      
      "default_title": "HLSPlayer"
   },
   "options_ui": {      
      "page": "options.htm"
   },
   "permissions": [ "tabs", "*://*/*.m3u8*", "webRequest", "webRequestBlocking", "contextMenus"]	
}
